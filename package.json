{
  "name": "smt-optimistic-rollup",
  "version": "0.0.1",
  "description": "Sparse Merkle Tree optimistic roll up",
  "main": "src/index.js",
  "scripts": {
    "test": "npm run testSolidity && npm run testTS",
    "testSolidity": "echo \"test solidity\"",
    "testTS": "mocha -r ts-node/register test/**/*.test.ts",
    "prettier": "./node_modules/.bin/prettier --single-quote --write --print-width 160 ./**/*.js",
    "coverage": "./node_modules/.bin/solidity-coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wilsonbeam/smt-optimistic-rollup.git"
  },
  "keywords": [
    "SMT",
    "Sparse",
    "Merkle",
    "Tree",
    "Optimistic",
    "Rollup"
  ],
  "author": "Wilson Beam <wilsonbeam@protonmail.com>",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/wilsonbeam/smt-optimistic-rollup/issues"
  },
  "homepage": "https://github.com/wilsonbeam/smt-optimistic-rollup#readme",
  "devDependencies": {
    "@types/chai": "^4.2.4",
    "@types/mocha": "^5.2.7",
    "@types/web3": "^1.2.2",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-bn": "^0.2.0",
    "ethlint": "^1.2.5",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "mocha": "^6.2.2",
    "prettier": "^1.19.1",
    "truffle": "^5.0.44",
    "ts-node": "^8.5.0",
    "typescript": "^3.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --single-quote --write  --print-width 160",
      "git add"
    ],
    "contracts/**/*.{sol}": [
      "solium -d contracts/ --fix",
      "git add"
    ]
  },
  "dependencies": {
    "web3-utils": "^1.2.2"
  }
}
